# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# API Endpoints
GET     /api                controllers.ApiController.index
GET     /api/health         controllers.ApiController.healthCheck

# --- Emotion Log API Endpoints ---
POST    /api/logs                 controllers.EmotionLogController.create
GET     /api/logs/user/:userId    controllers.EmotionLogController.listByUser(userId: String)
GET     /api/logs/:id             controllers.EmotionLogController.findById(id: Long)
# デバッグ用
GET     /api/logs                 controllers.EmotionLogController.listAll
PUT     /api/logs/:id             controllers.EmotionLogController.update(id: Long)
DELETE  /api/logs/:id             controllers.EmotionLogController.delete(id: Long)
